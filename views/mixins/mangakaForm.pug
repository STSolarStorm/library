mixin mangakaForm(mangaka, saveUrl, cancelUrl)

    div.form-container
        form(action=saveUrl method='post')
            div.form-input
                label(for='first_name') First Name:
                input(id='first_name' name='first_name' value=mangaka.first_name)

            div.form-input
                label(for='last_name') Last Name:
                input(id='last_name' name='last_name' value=mangaka.last_name)

            div.form-input
                label(for='date_of_birth') Date of Birth:
                input(id='date_of_birth' name='date_of_birth' type='date' value=mangaka.date_of_birth)

            div.form-input
                label(for='num_of_books') Number of Manga/Books:
                input(id='num_of_books' name='num_of_books' value=mangaka.num_of_books)

            div.form-input
                label(for='image') Image of Mangaka:
                input(id='image' name='image' value=mangaka.image)

            div.form-buttons
                a.button.cancel(href=cancelUrl) Cancel
                button.button.primary(type='submit') Save